<head>
    <link rel="stylesheet" href="/css/form.css" />
</head>
<body>
    <section class="form_container">
        <h2>Edit exercise name</h2>
        <form
            action="/workouts/<%=workoutId%>/exercise/<%=currentExercise.exercise_id%>?_method=PUT"
            method="post"
        >
            <input type="hidden" name="junction_id" value="<%=junctionId%>" />
            <ul>
                <li>
                    <label for="name"> Exercise Name </label>
                    <select name="name" id="name">
                        <option value="">-- Please choose an option --</option>
                        <% for (const exercise of exercises) { %>
                        <option value="<%=exercise.name%>">
                            <%=exercise.name%>
                        </option>
                        <% } %>
                    </select>
                    <span>Select exercise</span>
                </li>
                <li><input type="submit" value="Update" /></li>
            </ul>
        </form>

        <form
            action="/workouts/<%=workoutId%>/exercise/<%=currentExercise.exercise_id%>?_method=PUT"
            method="post"
        >
            <input type="hidden" name="junction_id" value="<%=junctionId%>" />
            <ul>
                <li>
                    <label for="">Name is not on list? Add it here</label>
                    <input
                        type="text"
                        name="name"
                        value="<%=currentExercise.name%>"
                    />
                    <span>Add new exercise name</span>
                </li>
                <li class="add-or-edit-btn"><button>Update</button></li>
            </ul>
        </form>
    </section>
</body>
