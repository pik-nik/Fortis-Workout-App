<head>
    <link rel="stylesheet" href="/css/workouts.css">
</head>
<body>
    <h2>Workouts</h2>
    <section class="nav">
        <h3><a href="/workouts/new">Start New Workout</a></h3>
        <!-- add search function to look for old workout -->
        <h3>Find a Workout</h3> 
    </section>
    
    <section class="log">
        <h3>Workout Log</h3>
        <div>
            <% for (let workout of workouts) { %>
                <a href="/workouts/<%=workout.workout_id%>">
                    <div class="entry">
                        <p><%=workout.name%></p>
                        <p><%=workout.workout_date%></p>

                        <% for (const exercise of exercisesInWorkouts) { %>
                            <% if (workout.workout_id === exercise.workout_id) { %>
                                    <ul>
                                        <li><%= exercise.name %></li>
                                    </ul>
                                <% } %> 
                        <% } %> 
                    </div>
                </a> 
            <% } %>
        </div>  
    </section>
</body>
